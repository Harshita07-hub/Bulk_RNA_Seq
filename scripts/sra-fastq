mkdir -p fastq fastq/tmp logs

for srr in SRR7179504 SRR7179505 SRR7179506 SRR7179507 \
           SRR7179508 SRR7179509 SRR7179510 SRR7179511 \
           SRR7179520 SRR7179521 SRR7179522 SRR7179523 \
           SRR7179524 SRR7179525 SRR7179526 SRR7179527
do
    echo "=============================="
    echo "Converting $srr"

    fasterq-dump data/raw/$srr/$srr.sra \
        -O fastq \
        --threads 2 \
        --temp fastq/tmp \
        > logs/${srr}_fasterq.log 2>&1

    if [ -s fastq/${srr}.fastq ]; then
        echo "âœ… SUCCESS: fastq/${srr}.fastq created"
        ls -lh fastq/${srr}.fastq
    else
        echo "âŒ FAILED: fastq/${srr}.fastq not created"
        echo "ğŸ‘‰ Check log: logs/${srr}_fasterq.log"
    fi
done
